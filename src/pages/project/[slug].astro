---
import { getProject } from '../../actions/getProject';
import { getProjects } from '../../actions/getProjects';
import Layout from '../../layouts/Layout.astro';
import SectionContainer from '../../components/SectionContainer.astro';
import Tag from '../../components/Tag.astro';

import { fade } from 'astro:transitions';
import { CarouselDemo } from '@/components/Carousel';
import Layer from '@/components/icons/Layer.astro';

const {slug} = Astro.params

const project = await getProject(slug)

export async function getStaticPaths(){

    const projects = await getProjects()

    return projects.map(project => ({
        params:{ slug: project.slug}
    }))
}
---
<Layout title={project.title} description={project.summary}>
    <SectionContainer class="pt-10">
        <header>
            <h3 class="text-5xl font-bold block mb-6" transition:name={`project ${project._id} title`}>{project.title}</h3>
            <picture class="size-80 mx-auto container">
                <img src={project.projectImage} alt={project.title} class="aspect-video rounded-xl" transition:name={`project ${project._id} image`} loading="lazy" />
            </picture>
        </header>
        <div transition:animate={fade({ duration: '0.4s' })}>
            <div class="space-y-5 mb-7">
                <p class="text-gray-700 dark:text-gray-400 text-lg">{project.summary}</p>
                <Tag technologies={project.technologies}/>
            </div>
            <!-- <div class="grid sm:grid-cols-2 grid-cols-1 gap-3">
                {
                    project.projectImages.map(image =>(
                        <img class="aspect-video" src={image.url} />
                    ))
                }
            </div> -->
            <div class="flex gap-2">
                <Layer class="size-8"/>
                <span class="text-2xl font-bold block mb-6">Some images</span>
            </div>
            <CarouselDemo images={project.projectImages} client:load />
        </div>
    </SectionContainer>
</Layout>